.goodsBox
  width 100%
  background-color #fff
  border-bottom: 0.2rem solid #e2e2e2;
  .goodsBox_title
    position relative
    width 9.4rem
    padding 0 0.3rem
    height 1rem
    display flex
    justify-content space-between
    align-items center
    &:after
      content ''
      position absolute
      top 0
      left 0
      width 200%
      height 200%
      transform scale(0.5)
      transform-origin 0 0
      border-bottom 1px solid #dddddd
    img
      width 0.4rem
      height 0.4rem
    span
      color #666666
      font-weight bolder
      font-size 0.4rem
  .goodsBox_container
    ul
      padding 0.6rem 0 0 0.5rem
      margin 0
      list-style none
      display flex
      justify-content space-between
      flex-wrap nowrap
      overflow scroll
      li
        display flex
        flex-direction column
        width 3.5rem
        margin-right 0.3rem
        img
          border-radius 2px
          border 1px solid #f0f0f0
    .itemColumn
      margin 0
      padding 0
      list-style none
      display flex
      flex-direction column
      li
        position relative
        display flex
        width 10rem
        flex-direction row
        align-items center
        padding 0.3rem
        box-sizing border-box
        &:after
          content ''
          position absolute
          top 0
          left 0
          width 200%
          height 200%
          transform scale(0.5)
          transform-origin 0 0
          border-bottom 1px solid #dddddd
        img
         border none
         margin-right 0.5rem
        .goodsBox_container_text
          width 5rem
    .itemTwo
      margin 0
      padding 0.6rem 0.3rem 0
      list-style none
      display flex
      flex-wrap wrap
      overflow hidden
      li
        display flex
        flex-direction column
        width 4.5rem
        margin-right 0
.goodsBox_container_text
  display flex
  flex-direction column
  padding 0.3rem 0.3rem 0.5rem
  span
    font-size 0.35rem
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    line-height 0.5rem
  .goodsBox_container_text_name
    font-weight bolder
    color #333333
  .goodsBox_container_text_desc
    color #999999
    font-size 0.3rem
  .goodsBox_container_text_price
    color #D44D44
    font-weight bolder


