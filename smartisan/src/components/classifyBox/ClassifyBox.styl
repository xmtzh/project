.ClassifyBox
  width 100%
  background-color #fff
  border-bottom 0.2rem solid #e2e2e2
  .ClassifyBox_title
    position relative
    width 9.4rem
    padding 0 0.3rem
    height 1rem
    display flex
    align-items center
    &:after
      content ''
      position absolute
      top 0
      left 0
      width 200%
      height 200%
      transform scale(0.5)
      transform-origin 0 0
      border-bottom 1px solid #dddddd
    span
      color #666666
      font-weight bolder
      font-size 0.4rem
  .ClassifyBox_titleImg
    position relative
    width 9.4rem
    padding 0.4rem 0.3rem
    &:after
      content ''
      position absolute
      top 0
      left 0
      width 200%
      height 200%
      transform scale(0.5)
      transform-origin 0 0
      border-bottom 1px solid #dddddd
    img
      width 9.4rem
  .ClassifyBox_container
    ul
      display flex
      list-style none
      flex-direction column
      margin 0
      padding 0
      li
        display flex
        align-items center
        padding 0.4rem 0
        position relative
        &:after
          content ''
          position absolute
          top 0
          left 0
          width 200%
          height 200%
          transform scale(0.5)
          transform-origin 0 0
          border-bottom 1px solid #dddddd
        .icon
          margin 0 0.2rem
        span
          font-size 0.35rem
          font-weight bolder
          color rgba(0,0,0,0.7)
          text-align center
        .right
          position absolute
          width 0.4rem
          height 0.4rem
          right 0.3rem
    .twoItem
      display flex
      list-style none
      flex-direction row
      flex-wrap wrap
      padding 0
      margin 0
      li
        width 5rem
        display flex
        align-items center
        padding 0.4rem 0
        position relative
        &:after
          content ''
          position absolute
          top 0
          left 0
          width 200%
          height 200%
          transform scale(0.5)
          transform-origin 0 0
          border-bottom 1px solid #dddddd
          border-right 1px solid #dddddd
        span
          width 3rem
          color:  #666666
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
    .threeItem
      display flex
      flex-direction row
      flex-wrap wrap
      justify-content space-between
      list-style none
      margin 0
      padding 0.4rem 0.3rem
      li
        display flex
        flex-direction column
        align-items center
        padding 0.4rem 0
        position relative
        width 3rem
        .imgbox
          width 3rem
          height 3rem
          display flex
          justify-content center
          align-items center
          position relative
          margin-bottom 0.2rem
          &:after
            content ''
            position absolute
            top 0
            left 0
            width 200%
            height 200%
            box-sizing border-box
            border 1px solid #dddddd
            transform scale(0.5)
            transform-origin 0 0
        span
          width 3rem
          font-size 0.3rem
          overflow hidden
          text-overflow ellipsis
          white-space nowrap






