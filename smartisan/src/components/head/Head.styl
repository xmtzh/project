.head
  position fixed
  top 0
  width 100%
  height 1.35rem
  background-color #1d1d1d
  display flex
  align-items center
  box-sizing border-box
  z-index 100
  // justify-content center
  padding 0 0.5rem
  .headChild
    width 3rem
    height 100%
    display flex
    align-items center
    justify-content center
    img
      width 0.6rem
      height 0.6rem
    span
      color #ffffff
      font-size 0.5rem
      font-weight bolder
  .allWith
    width 9rem
  .headLeft
    justify-content flex-start
    span
      width 1rem
      height 50%
      color #ffffff
      font-size 0.32rem
      display flex
      align-items center
      justify-content center
      background linear-gradient(#2a2a29,#151515)
      box-shadow inset 0 1px 1px hsla(0,0%,100%,.1), inset 0 0 1px rgba(0,0,0,.5)
      border-radius 3px
  .headRight
    justify-content flex-end
  .desc
    width 1rem
  .desc1
    width 7rem
  .posa
    position absolute
    right 0.5rem
    span
      width 1rem
      height 50%
      color #ffffff
      font-size 0.32rem
      display flex
      align-items center
      justify-content center
      background linear-gradient(#2a2a29, #151515)
      box-shadow inset 0 1px 1px hsla(0, 0%, 100%, 0.1), inset 0 0 1px rgba(0, 0, 0, 0.5)
      border-radius 3px

.menuBar
  position fixed
  top 1.35rem
  left 0
  bottom 0
  right 0
  background-color #000
  z-index 300
  opacity 0
  transform translate3d(0,-120%,0)
  transition transform 0.25s linear 0s , opacity 0s linear 0.25s
  ul
    margin 0
    padding 0
    list-style none
    display flex
    flex-wrap wrap
    width 100%
    li
      position relative
      display flex
      flex-direction column
      align-items center
      justify-content center
      width 25%
      height 2rem
      box-sizing border-box
      &:after
        content ''
        position absolute
        top 0
        left 0
        border-right 1px solid #333333
        border-bottom 1px solid #333333;
        box-sizing border-box
        width 200%
        height 200%
        transform-origin 0 0
        transform scale(0.5)
      img
        width 0.6rem
        height 0.6rem
        margin-bottom 0.2rem
      span
       font-size 0.3rem
       color #dddddd
.active
  opacity 1
  transform translate3d(0,0,0)
  transition transform 0.25s linear , opacity 0s linear



