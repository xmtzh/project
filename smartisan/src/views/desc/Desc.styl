.Desc
  width 100%
  margin 1.35rem 0
  z-index -1
  .headBar
    position fixed
    background #f2f2f2
    width 100%
    height 1.4rem
    padding 0.2rem
    box-sizing border-box
    z-index 100
    box-shadow 0 5px 13px rgba(0, 0, 0, 0.12)
    ul
      display flex
      flex-direction row
      list-style none
      position relative
      height 1rem
      width 100%
      margin 0
      padding 0
      border 1px solid #cdcdcd
      border-radius 3px
      li
        display flex
        position relative
        align-items center
        justify-content center
        height 1rem
        font-size 0.4rem
        color #666666
        font-weight bolder
        width 25%
        &:after
          content ''
          position absolute
          top 0
          left 0
          width 200%
          height 200%
          transform scale(0.5)
          transform-origin 0 0
          box-sizing border-box
          border-right 1px solid #cdcdcd
      .spanActive
        color #ffffff
        background-image linear-gradient(#aeaeae,#b3b3b3)
        box-shadow inset 0 1px 3px rgba(0,0,0,.15)
  .wrapper
    position absolute
    top 2.75rem
    bottom 1.4rem
    left 0
    right 0
    background #333
    overflow hidden
    .DescContainer
      background-color #fff
      .DescSwiper
        padding 0 0.5rem
        overflow hidden
      .DescGoodsInfo
        .DescGoodsInfo_all
          display flex
          flex-direction column
          padding 0.5rem
          span
            font-size 0.35rem
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            line-height 0.7rem
          .name
            font-size 0.4rem
            font-weight bolder
            color #333
          .desc
            color #7f7f7f
          .price
            color #d44d44
            font-size 0.4rem
            font-weight bolder
      .DescSelected
        padding 0.3rem 0.8rem 0.3rem 0.5rem
        display flex
        flex-direction column
        position relative
        .type
          font-size 0.35rem
          color #999999
          font-weight bolder
        span
          font-size 0.35rem
          color #333333
          line-height 0.6rem
          span
            font-weight bolder
        img
          position absolute
          top 50%
          transform translateY(-50%)
          right 0.4rem
          width 0.4rem
          height 0.4rem
      .DescGoodsImg
        img
          width 100%
      .DescTeachPromt
        ul
          padding 0.5rem 0.5rem 1rem
          margin 0
          list-style none
          li
            position relative
            background-color #fafafa
            padding 0 0.5rem
            height 1.4rem
            display flex
            justify-content space-between
            align-items center
            font-size 0.3rem
            &:nth-of-type(even)
              background-color #fff
            &:after
              content ''
              position absolute
              top 0
              left 0
              width 200%
              height 200%
              transform scale(0.5)
              transform-origin 0 0
              border-bottom 1px solid #dddddd
            .desc
              color #7f7f7f
      .DescServer
        ul
          margin 0
          padding 0.5rem 0.5rem 0.3rem
          list-style none
          display flex
          flex-wrap wrap
          li
            display flex
            margin-right 0.4rem
            align-items center
            height 0.6rem
            img
              width 0.4rem
              height 0.4rem
              margin-right 0.2rem
            span
              color #333
              font-size 0.25rem
              font-weight bolder
      .DescRecommend
        .itemTwo
          margin 0
          padding 0.6rem 0.3rem 0
          list-style none
          display flex
          flex-wrap wrap
          overflow hidden
          li
            display flex
            flex-direction column
            width 4.5rem
            margin-right 0
            img
              width 4.5rem
              height 4.5rem
              border-radius 2px
              border 1px solid #f0f0f0
            .goodsBox_container_text
              display flex
              flex-direction column
              padding 0.3rem 0.3rem 0.5rem
              span
                font-size 0.35rem
                overflow hidden
                text-overflow ellipsis
                white-space nowrap
                line-height 0.5rem
              .goodsBox_container_text_name
                font-weight bolder
                color #333333
              .goodsBox_container_text_desc
                color #999999
                font-size 0.3rem
              .goodsBox_container_text_price
                color #D44D44
                font-weight bolder
  .footerBar
    position fixed
    bottom 0
    height 1.4rem
    width 100%
    background-color #fff
    display flex
    align-items center
    z-index 400
    box-shadow 0 -11px 27px rgba(0, 0, 0, 0.08)
    img
      width 0.6rem
      height 0.6rem
      margin 0 0.5rem
    .DescfooterBar_btn
      flex 1
      button
        width 4rem
        height 1rem
        border none
        background linear-gradient(#6f94e8, #5178df)
        border-radius 0.1rem
        color #ffffff
        font-size 0.4rem
        font-weight bolder
        margin-right 0.2rem
      .addShopCar
        color #8c8c8c
        background rgba(0,0,0,0)
        border 1px solid #dbdbdb
      .confirm
        width 8.2rem
  .shopCar
    position absolute
    top 0
    left 0
    right 0
    bottom 1.4rem
    background-color rgba(0,0,0,0.8)
    z-index 200
    .shopCarContainer
      z-index 300
      position absolute
      bottom 0
      width 10rem
      height 10rem
      background-color #fff
      .shopCarContainer_head
        background-color #f7f7f7
        width 100%
        height 3rem
        display flex
        position relative
        box-shadow 0 5px 13px rgba(0, 0, 0, 0.12)
        img
          position absolute
          top -0.3rem
          width 3rem
          border-radius 0.15rem
          margin 0 0.4rem
        .head_text
          width 6rem
          position absolute
          line-height 0.7
          right 0.2rem
          top 50%
          transform translateY(-50%)
          span
            font-size 0.4rem
            font-weight bolder
            color #333333
          p
            margin 0.2rem 0 0.15rem
            padding 0
            span
              font-size 0.35rem
              font-weight normal
              color #666666
              &:after
                content ' \B7  '
          .price
            color #d44d44
            font-size 0.45rem
      .shopWrapper
        position absolute
        bottom 0
        left 0
        right 0
        top 3rem
        background-color #fff
        overflow hidden
        .allSelect
          background-color #fff
          .colorSelect
            ul
              li
                width 2.8rem
                height 2rem
                background-color #fff
                border 1px solid #f0f0f0
                display flex
                flex-direction column
                justify-content center
                align-items center
                margin 0 0.2rem 0.2rem 0
                border-radius 0.2rem
                img
                  width 0.5rem
                  height 0.5rem
                  border-radius 50%
                  margin-bottom 0.2rem
                span
                  font-size 0.3rem
              .DescActive
                border 1px solid #6a8fe6
          //   background-color pink
          //   width 100%
          //   height 20rem
          .sizeSelect
            ul
              li
                background-color #fff
                border 1px solid #f0f0f0
                width 1rem
                height 1rem
                margin 0 0.2rem 0.2rem 0
                display flex
                flex-direction column
                justify-content center
                align-items center
                border-radius 0.2rem
                span
                  font-size 0.4rem
                  font-weight normal
              .DescActive
                border 1px solid #6a8fe6
          .numberSelect
            .shopNum
              height 1.5rem
              display flex
              align-items center
              padding 0 0.5rem
              span
                display flex
                justify-content center
                align-items center
                margin-right 0.3rem
                width 0.7rem
                height 0.7rem
              .btn
                border-radius 50%
                border 1px solid #dddddd
                position relative
                color #bbbbbb
                span
                  position absolute
                  top -0.1rem
              .shadow
                color #666
                box-shadow 0px 0px 3px #888888
                // &:active
                //   background-color #000000



