.Desc
  width 100%
  margin 1.35rem 0
  z-index -1
  .headBar
    position fixed
    background #f2f2f2
    width 100%
    height 1.4rem
    padding 0.2rem
    box-sizing border-box
    z-index 100
    box-shadow 0 5px 13px rgba(0, 0, 0, 0.12)
    ul
      display flex
      flex-direction row
      list-style none
      position relative
      height 1rem
      width 100%
      margin 0
      padding 0
      border 1px solid #cdcdcd
      border-radius 3px
      li
        display flex
        position relative
        align-items center
        justify-content center
        height 1rem
        font-size 0.4rem
        color #666666
        font-weight bolder
        width 25%
        &:after
          content ''
          position absolute
          top 0
          left 0
          width 200%
          height 200%
          transform scale(0.5)
          transform-origin 0 0
          box-sizing border-box
          border-right 1px solid #cdcdcd
      .spanActive
        color #ffffff
        background-image linear-gradient(#aeaeae,#b3b3b3)
        box-shadow inset 0 1px 3px rgba(0,0,0,.15)
  .wrapper
    position absolute
    top 2.75rem
    bottom 1.4rem
    left 0
    right 0
    background #333
    overflow hidden
    .DescContainer
      background-color #fff
      .DescSwiper
        padding 0 0.5rem
      .DescGoodsInfo
        .DescGoodsInfo_all
          display flex
          flex-direction column
          padding 0.5rem
          span
            font-size 0.35rem
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            line-height 0.7rem
          .name
            font-size 0.4rem
            font-weight bolder
            color #333
          .desc
            color #7f7f7f
          .price
            color #d44d44
            font-size 0.4rem
            font-weight bolder
      .DescSelected
        padding 0.3rem 0.8rem 0.3rem 0.5rem
        display flex
        flex-direction column
        position relative
        .type
          font-size 0.35rem
          color #999999
          font-weight bolder
        span
          font-size 0.35rem
          color #333333
          line-height 0.6rem
          span
            font-weight bolder
        img
          position absolute
          top 50%
          transform translateY(-50%)
          right 0.4rem
          width 0.4rem
          height 0.4rem
      .DescGoodsImg
        img
          width 100%
      .DescTeachPromt
        ul
          padding 0.5rem 0.5rem 1rem
          margin 0
          list-style none
          li
            position relative
            background-color #fafafa
            padding 0 0.5rem
            height 1.4rem
            display flex
            justify-content space-between
            align-items center
            font-size 0.3rem
            &:nth-of-type(even)
              background-color #fff
            &:after
              content ''
              position absolute
              top 0
              left 0
              width 200%
              height 200%
              transform scale(0.5)
              transform-origin 0 0
              border-bottom 1px solid #dddddd
            .desc
              color #7f7f7f
      .DescServer
        ul
          margin 0
          padding 0.5rem 0.5rem 0.3rem
          list-style none
          display flex
          flex-wrap wrap
          li
            display flex
            margin-right 0.4rem
            align-items center
            height 0.6rem
            img
              width 0.4rem
              height 0.4rem
              margin-right 0.2rem
            span
              color #333
              font-size 0.25rem
              font-weight bolder
      .DescRecommend
        .itemTwo
          margin 0
          padding 0.6rem 0.3rem 0
          list-style none
          display flex
          flex-wrap wrap
          overflow hidden
          li
            display flex
            flex-direction column
            width 4.5rem
            margin-right 0
            img
              width 4.5rem
              height 4.5rem
              border-radius 2px
              border 1px solid #f0f0f0
            .goodsBox_container_text
              display flex
              flex-direction column
              padding 0.3rem 0.3rem 0.5rem
              span
                font-size 0.35rem
                overflow hidden
                text-overflow ellipsis
                white-space nowrap
                line-height 0.5rem
              .goodsBox_container_text_name
                font-weight bolder
                color #333333
              .goodsBox_container_text_desc
                color #999999
                font-size 0.3rem
              .goodsBox_container_text_price
                color #D44D44
                font-weight bolder




.DescTitle
  position relative
  width 9.4rem
  padding 0 0.3rem
  height 1rem
  display flex
  justify-content space-between
  align-items center
  &:after
    content ''
    position absolute
    top 0
    left 0
    width 200%
    height 200%
    transform scale(0.5)
    transform-origin 0 0
    border-bottom 1px solid #dddddd
  span
    color #666666
    font-weight bolder
    font-size 0.4rem
.bottom
  border-bottom 0.2rem solid #e2e2e2
