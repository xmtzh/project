.Main_navBar
  width 10rem
  height 1.3rem
  display flex
  background-color #ffffff
  z-index 100
  position fixed
  left 0
  bottom 0
  .active
    background linear-gradient(0deg, hsla(0, 0%, 100%, 0.05), rgba(0, 0, 0, 0.05))
    color #333 !important
  .Main_navBar_item
    position relative
    display flex
    flex-direction column
    align-items center
    justify-content center
    width 2.5rem
    height 100%
    text-decoration none
    color #9a9a9a
    img
      width 0.6rem
      height 0.6rem
      margin-bottom 0.1rem
    span
      font-size 0.2rem
      font-weight bolder
    .goodsNum
      position absolute
      padding 0.1rem 0.13rem
      border-radius 50%
      background-color #d44d44
      top 0
      left 50%
      color #ffffff



