.Shop1
  margin 1.35rem 0 2.7rem
  background-color #fff
  .shop1Container
    ul
      padding 0
      margin 0
      list-style none
      li
        display flex
        align-items center
        height 3rem
        padding 0 0.5rem
        img
          width 2rem
          height 2rem
          margin-right: 0.5rem;
        .circle
          width 0.6rem
          height 0.6rem
        .textPart
          display flex
          flex-direction column
          span
            font-weight bolder
            font-size 0.35rem
            line-height 0.5rem
          p
            margin 0
            padding 0
          .type
            font-size 0.3rem
            color #7f7f7f
            font-weight normal
            .textType
              &:after
                content ' \B7  '
          .price
            color #999999
            font-size 0.35rem
            display flex
            align-items center
            span
              margin-right 0.1rem
            .textPrice
              color #d44d44
            .shopNum
              height 0.6rem
              display flex
              align-items center
              padding-right 0.5rem
              span
                display flex
                justify-content center
                align-items center
                margin-right 0.5rem
                width 0.5rem
                height 0.5rem
              .btn
                border-radius 50%
                border 1px solid #dddddd
                position relative
                color #bbbbbb
                span
                  position absolute
                  top -0.05rem
              .shadow
                color #666
                box-shadow 0px 0px 3px #888888
  .shop1Footer
    position fixed
    bottom 1.35rem
    height 1.35rem
    width 100%
    box-sizing border-box
    padding 0 0.3rem
    z-index 90
    background #fafafa
    box-shadow 0 -0.2rem 1rem rgba(0, 0, 0, 0.1)
    display flex
    align-items center
    justify-content space-between
    .left
      display flex
      align-items center
      img
        width 0.6rem
        height 0.6rem
        margin-right 0.2rem
      span
        color #999999
        font-size 0.35rem
        b
          font-size 0.4rem
          margin 0 0.1rem
    .right
      display flex
      align-items center
      .price
        display flex
        flex-direction column
        margin-right 0.1rem
        span
         font-size 0.35rem
         color #666666
        .allPrice
          font-size 0.3rem
          color #333333
          font-weight bolder
          line-height 0.6rem
          span
            color #d44d44
      button
        width 3rem
        height 1rem
        border none
        border-radius 0.2rem
        color #ffffff
        font-size 0.35rem
        font-weight bolder

